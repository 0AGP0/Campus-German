---
import MainLayout from '../../layouts/MainLayout.astro';
import '../../styles/pages/kurslar.css';
import { getCollection } from 'astro:content';
import { coursePricing } from '../../data/coursePricing';

export async function getStaticPaths() {
    return [
        { params: { lang: 'tr' } },
        { params: { lang: 'de' } },
    ];
}

const { lang } = Astro.params;

// Slug'dan dil uzantısını temizle
function cleanSlug(slug: string): string {
    let clean = slug;
    // Tire ile biten uzantıları kaldır (bildungszeit-de -> bildungszeit)
    if (clean.endsWith('-de')) {
        clean = clean.replace(/-de$/, '');
    } else if (clean.endsWith('-tr')) {
        clean = clean.replace(/-tr$/, '');
    }
    // Tire olmadan biten uzantıları kaldır (bildungszeitde -> bildungszeit)
    else if (clean.endsWith('de')) {
        clean = clean.replace(/de$/, '');
    } else if (clean.endsWith('tr')) {
        clean = clean.replace(/tr$/, '');
    }
    return clean;
}

// Tüm kursları al ve kategorilere ayır
const allKurslar = await getCollection('kurslar');
const kurslarByLang = allKurslar.filter(kurs => kurs.data.lang === lang);

// Genel bakış sayfalarını filtrele
const genelBakisSayfalari = ['intensiv-deutsch', 'saisonal-uebersicht', 'online-uebersicht', 'pruefungsvorbereitung-uebersicht', 'intensiv-studentenvisum'];

// Ana kurslar (genel bakış sayfaları hariç)
const anaKurslar = kurslarByLang.filter(kurs => {
    const cleanedSlug = cleanSlug(kurs.slug);
    return !genelBakisSayfalari.includes(cleanedSlug);
});

// Kategorilere göre ayır
const yogunKurslar = anaKurslar.filter(kurs => 
    (kurs.slug.startsWith('intensiv-') || kurs.slug.startsWith('yogun-')) && 
    !kurs.slug.includes('studentenvisum') && !kurs.slug.includes('ogrenci-vizesi')
);
const onlineKurslar = anaKurslar.filter(kurs => 
    kurs.slug.startsWith('online-')
);
const donemselKurslar = anaKurslar.filter(kurs => 
    kurs.slug.includes('woechentlich-') || 
    kurs.slug.includes('haftalik-') || 
    kurs.slug.includes('sommerschule') || 
    kurs.slug.includes('yaz-okulu') || 
    kurs.slug.includes('abend-') ||
    kurs.slug.includes('aksam-') ||
    kurs.slug.includes('saisonal-') ||
    kurs.slug.includes('donemsel-')
);
const sinavKurslar = anaKurslar.filter(kurs => 
    kurs.slug.includes('goethe-') || 
    kurs.slug.includes('telc-') || 
    kurs.slug.includes('testdaf-') || 
    kurs.slug.includes('dsh-') ||
    kurs.slug.includes('pruefungsvorbereitung-')
);
const kurumsalKurslar = anaKurslar.filter(kurs => 
    kurs.slug.includes('firmenkurs') ||
    kurs.slug.includes('firma-') || 
    kurs.slug.includes('bildungszeit') || 
    kurs.slug.includes('daad-') || 
    kurs.slug.includes('erasmus-') || 
    kurs.slug.includes('beruf-') ||
    kurs.slug.includes('meslek-') || 
    kurs.slug.includes('career-') || 
    kurs.slug.includes('medizin-') ||
    kurs.slug.includes('tip-') || 
    kurs.slug.includes('fsp-') || 
    kurs.slug.includes('ingenieurwesen-') ||
    kurs.slug.includes('muhendislik-') || 
    kurs.slug.includes('wirtschaft-') ||
    kurs.slug.includes('ekonomi-')
);
---

<MainLayout title={lang === 'tr' ? "Kurslar - CampusGerman" : "Kurse - CampusGerman"} lang={lang}>
    <!-- Hero Section -->
    <section class="courses-hero-section">
        <div class="container">
            <!-- Main Hero Content -->
            <div class="courses-hero-content">
                <div class="hero-left">
                    <h1 class="hero-title">
                        {lang === 'tr' ? "CampusGerman'da Almanca Dil Kursları!" : "Deutschkurse bei CampusGerman!"}
                    </h1>
                    
                    <div class="hero-content">
                        <p class="hero-description">
                            {lang === 'tr' 
                                ? "Almanya'da üniversite okumak, Almanya'da çalışmak, meslek eğitimi başlatmak veya sadece Almanca bilginizi geliştirmek için Almanca öğrenmek ister misiniz? Motivasyonunuz ne olursa olsun, Almanya'nın canlı üniversite şehirlerindeki CampusGerman Dil Okulu'nda sizin için uygun olan Almanca kursu bulunmaktadır!"
