import MainLayout from '../../../layouts/MainLayout.astro';
import '../../../styles/pages/kurslar.css';
import { coursePricing } from '../../../data/coursePricing';

export async function getStaticPaths() {
    return [
        { params: { lang: 'tr' } },
        { params: { lang: 'de' } },
    ];
}

const { lang } = Astro.params;

// Slug'dan dil uzantısını temizle
function cleanSlug(slug: string): string {
    let clean = slug;
    // Tire ile biten uzantıları kaldır (bildungszeit-de -> bildungszeit)
    if (clean.endsWith('-de')) {
        clean = clean.replace(/-de$/, '');
    } else if (clean.endsWith('-tr')) {
        clean = clean.replace(/-tr$/, '');
    }
    // Tire olmadan biten uzantıları kaldır (bildungszeitde -> bildungszeit)
    else if (clean.endsWith('de')) {
        clean = clean.replace(/de$/, '');
    } else if (clean.endsWith('tr')) {
        clean = clean.replace(/tr$/, '');
    }
    return clean;
}

// Sınav hazırlık kursları listesi
const allKurslar = await getCollection('kurslar');
const sinavKurslar = allKurslar.filter(kurs => {
    const cleanedSlug = cleanSlug(kurs.slug);
    return kurs.data.lang === lang && 
        (cleanedSlug.startsWith('goethe-') ||
         cleanedSlug.startsWith('testdaf-') ||
         cleanedSlug.startsWith('pruefungsvorbereitung-') ||
         cleanedSlug.startsWith('online-pruefungsvorbereitung') ||
         cleanedSlug.startsWith('fsp-') ||
         cleanedSlug.startsWith('sinav-')) &&
        cleanedSlug !== 'pruefungsvorbereitung-uebersicht';
});

