---
// Ana Layout - Tüm sayfalar için kullanılacak
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SuccessModal from '../components/SuccessModal.astro';

const { title = 'CampusGerman - Almanca Dil Kursu', lang = 'tr', includeHizmetCSS = false } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="http://campusgerman.com/wp-content/uploads/2025/11/German_logo-1-1.png">
    <link rel="shortcut icon" type="image/png" href="http://campusgerman.com/wp-content/uploads/2025/11/German_logo-1-1.png">
    <link rel="apple-touch-icon" href="http://campusgerman.com/wp-content/uploads/2025/11/German_logo-1-1.png">
    
    <!-- CSS -->
    <link rel="stylesheet" href="/style.css">
    {includeHizmetCSS ? (
        <link rel="stylesheet" href="/hizmet.css" />
    ) : ''}
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Header Component -->
    <Header lang={lang} />
    
    <!-- Main Content -->
    <main>
        <slot />
    </main>
    
    <!-- Footer Component -->
    <Footer lang={lang} />
    
    <!-- Success Modal -->
    <SuccessModal lang={lang} />
    
    <!-- JavaScript -->
    <script is:inline src="/script.js"></script>
</body>
</html>

