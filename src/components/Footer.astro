                        <li><a href={`/${lang}/erfolgsgeschichten`}>{currentLang.successStories}</a></li>
                        <li><a href={`/${lang}/kontakt`}>{currentLang.contact}</a></li>
                    </ul>
                </div>
                
                <!-- Courses - Sadece Ana Kategoriler -->
                <div class="footer-column">
                    <h3 class="footer-title">{currentLang.courses}</h3>
                    <ul class="footer-links">
                        <li><a href={`/${lang}/kurslar/intensiv-deutsch`}>{currentLang.intensiveOverview}</a></li>
                        <li><a href={`/${lang}/kurslar/saisonal-uebersicht`}>{currentLang.seasonalOverview}</a></li>
