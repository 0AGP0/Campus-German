                                <a href={`/${lang}/ucretsiz-deneme`} class="dropdown-cta-btn">{lang === 'tr' ? 'Ücretsiz Deneme Dersi Al' : 'Kostenlose Probestunde'}</a>
                            </div>
                        </div>
                    </li>

                    <!-- 4. Sunduklarımız - Minimal Dropdown -->
                    <li class="nav-item">
                        <a href={`/${lang}/unsere-dienstleistungen`} class="nav-link">
                            <span>{currentLang.services}</span>
                            <i class="fas fa-chevron-down dropdown-arrow"></i>
                        </a>
                        <div class="dropdown-menu">
                            <a href={`/${lang}/unsere-dienstleistungen/universitaetsvermittlung`} class="dropdown-link">{lang === 'tr' ? 'Üniversite Yerleştirme Programı / Pathway' : 'Universitätsvermittlung / Pathway'}</a>
