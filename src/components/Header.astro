---
// Header Component - Yeni Yapı
const { lang = 'tr' } = Astro.props;

// Mevcut path'i al ve dil değiştir
const currentPath = Astro.url.pathname;
const pathWithoutLang = currentPath.replace(/^\/(tr|de)/, '') || '/';

// Dil değiştirme linkleri
const switchLangUrl = (newLang: string) => {
  return `/${newLang}${pathWithoutLang === '/' ? '' : pathWithoutLang}`;
};

// Çeviriler
const t = {
    tr: {
        courses: "Kurslar",
        about: "Hakkımızda",
        advantages: "Avantajlarımız",
        services: "Sunduklarımız",
        winners: "Kazananlar",
        contact: "İletişim",
        register: "Kursa Kayıt OL",
    },
    de: {
        courses: "Deutschkurse",
        about: "Über uns",
        advantages: "Unsere Vorteile",
        services: "Unsere Dienstleistungen",
        winners: "Erfolgsgeschichten",
        contact: "Kontakt",
        register: "Jetzt anmelden",
    }
};

const currentLang = t[lang as keyof typeof t] || t.tr;
---

<!-- Main Header -->
<header class="main-header">
    <div class="container">
        <div class="header-wrapper">
            <!-- Logo Section -->
            <div class="logo-section">
                <a href={`/${lang}/`} class="logo-link">
                    <img src="http://campusgerman.com/wp-content/uploads/2025/11/German_logo-1-1.png" alt="CampusGerman Logo" class="logo-img">
                </a>
            </div>

            <!-- Navigation Menu -->
            <nav class="main-nav">
                <ul class="nav-list">
                    <!-- 1. Almanca Kursları - Tabbed Dropdown -->
                    <li class="nav-item">
                        <a href={`/${lang}/kurslar`} class="nav-link">
                            <span>{currentLang.courses}</span>
                            <i class="fas fa-chevron-down dropdown-arrow"></i>
                        </a>
                        <div class="dropdown-menu courses-dropdown">
                            <div class="courses-wrapper">
                                <div class="courses-sidebar">
                                    <button class="course-tab active" data-tab="yogun">{lang === 'tr' ? 'Yoğun Akademik' : 'Intensiv'}</button>
                                    <button class="course-tab" data-tab="donemsel">{lang === 'tr' ? 'Dönemsel' : 'Saisonal'}</button>
